<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kt">

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="doBack">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_back" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout_A"
        style="@style/activity_kt_rl"
        android:layout_marginLeft="7dp">

        <com.kt.ktball.myclass.MyCircleImageView
            android:id="@+id/game_avatar1_imageView"
            style="@style/activity_kt_header"
            android:onClick="doScan"
            android:src="@drawable/game_avatar" />

        <RelativeLayout
            android:id="@+id/relativelayout_info_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_avatar1_imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_scanuser"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView40"
                style="@style/activity_kt_rl_rl_tv" />

            <ImageView
                android:id="@+id/dengji_A"
                style="@style/activity_kt_rl_rl_dengji" />

            <TextView
                android:id="@+id/zandouli_A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dengji_A"
                android:layout_centerHorizontal="true"
                android:text="战斗力"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_kt_text_size" />

            <TextView
                android:id="@+id/zandouli_num_A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/zandouli_A"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_kt_text_size" />

            <ImageView
                android:id="@+id/boom_A"
                style="@style/activity_kt_rl_rl_dengji"
                android:layout_above="@+id/zandouli_A" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout

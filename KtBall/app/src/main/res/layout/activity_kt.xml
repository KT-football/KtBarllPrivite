    <RelativeLayout
        android:id="@+id/relativelayout_F"
        style="@style/activity_kt_rl"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="7dp">

        <com.kt.ktball.myclass.MyCircleImageView
            android:id="@+id/game_avatar6_imageView"
            style="@style/activity_kt_header"

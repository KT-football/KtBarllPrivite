<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".UI.Activity.LoginActivity">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/imageView23"
        android:src="@drawable/ktlogo"
        android:layout_marginTop="56dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/imageView23"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/background_text"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout9">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView24"
            android:src="@drawable/user"
            android:paddingLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/imageView25"
            android:src="@drawable/line"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView24"
            android:layout_toEndOf="@+id/imageView24" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/editText"
            android:hint="请输入账号"
            android:textSize="18dp"
            android:paddingLeft="8dp"
            android:textColor="@android:color/white"
            android:background="@drawable/no_border"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView25"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_text"
        android:layout_below="@+id/relativeLayout9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout10">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView26"
            android:paddingLeft="8dp"
            android:src="@drawable/password"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/imageView27"
            android:src="@drawable/line"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView26"
            android:layout_toEndOf="@+id/imageView26" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/editText2"
            android:hint="请输入密码"
            android:textSize="18dp"
            android:paddingLeft="8dp"
            android:textColor="@android:color/white"
            android:background="@drawable/no_border"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView27"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_buttom"
        android:text="登 录"
        android:onClick="doLogin"
        android:textSize="20dp"
        android:id="@+id/button"
        android:layout_below="@+id/relativeLayout10"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立即注册"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="17dp"
        android:onClick="doRegister"
        android:textColor="@color/colorHui"
        android:id="@+id/textView32"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="找回密码"
        android:textSize="17dp"
        android:onClick="doForgetPassword"
        android:textColor="@color/colorHui"
        android:layout_marginRight="20dp"
        android:id="@+id/textView33"
        android:layout_alignTop="@+id/textView32"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

</RelativeLayout>

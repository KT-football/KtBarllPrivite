<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_app_cartoon_item"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/layout_traindetails_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/layout_traindetails_img"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_alignParentRight="true" />

                    <TextView
                        android:id="@+id/layout_traindetails_intro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_toLeftOf="@+id/layout_traindetails_img"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/layout_traindetails_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_traindetails_intro"
                        android:layout_marginTop="10dp"
                        android:layout_toLeftOf="@+id/layout_traindetails_img"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/layout_traindetails_name_2"
                        android:layout_width="144dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/layout_traindetails_img"
                        android:layout_gravity="center_horizontal"
                        android:layout_toRightOf="@+id/layout_traindetails_details"
                        android:background="@drawable/bg_item_train_2"
                        android:gravity="center_horizontal"
                        android:paddingTop="3dp"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/layout_traindetails_yxl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="已训练"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/layout_traindetails_yxl_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@+id/layout_traindetails_yxl"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@+id/layout_traindetails_yxl"
                            android:layout_toRightOf="@+id/layout_traindetails_yxl_tv"
                            android:text="分钟"
                            android:textColor="@color/white"
                            android:textSize="8sp" />
                    </RelativeLayout>

                    <View
                        style="@style/line_v"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/layout_traindetails_ywc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="已完成"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/layout_traindetails_ywc_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@+id/layout_traindetails_ywc"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@+id/layout_traindetails_ywc"
                            android:layout_toRightOf="@+id/layout_traindetails_ywc_tv"
                            android:text="次"
                            android:textColor="@color/white"
                            android:textSize="8sp" />
                    </RelativeLayout>

                    <com.frame.app.view.ColorArcProgressBar
                        android:id="@+id/layout_traindetails_bar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        app:back_width="10dp"
                        app:front_width="10dp"
                        app:is_need_content="true"
                        app:is_need_unit="true"
                        android:layout_marginRight="20dp"
                        app:max_value="100"
                        app:string_unit="%"
                        app:total_engle="360" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_app_cartoon_item"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/layout_traindetails_img_2"
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/layout_traindetails_intro_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/layout_traindetails_manhua_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/bg_train_video_bt"
                        android:drawableLeft="@drawable/icon_shipin"
                        android:drawablePadding="7dp"
                        android:padding="7dp"
                        android:text="观看KTBall教学漫画"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_app_cartoon_item"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/layout_traindetails_img_3"
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/layout_traindetails_intro_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/layout_traindetails_manhua_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/bg_train_video_bt"
                        android:drawableLeft="@drawable/icon_shipin"
                        android:drawablePadding="7dp"
                        android:padding="7dp"
                        android:text="观看KTBall漫画故事"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_traindetails_start"
        android:background="@color/toolbar_bg_color_2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_train_start"
            android:drawablePadding="7dp"
            android:text="开始训练"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_margin="7dp"/>
    </RelativeLayout>
</LinearLayout>
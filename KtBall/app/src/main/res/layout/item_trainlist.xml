<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_app_cartoon_item"
    android:layout_margin="10dp">

    <RelativeLayout
        android:id="@+id/item_trainlist_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:paddingTop="3dp"
        android:paddingRight="3dp">

        <TextView
            android:id="@+id/item_trainlist_name"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:id="@+id/item_trainlist_name_2"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:layout_below="@+id/item_trainlist_img"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_item_train_2"
        android:gravity="center_horizontal"
        android:paddingTop="3dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/item_trainlist_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerInside"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/item_trainlist_1"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/item_trainlist_tag"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_trainlist_tag"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
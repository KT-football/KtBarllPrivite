<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewPager"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:overScrollMode="never">

    <RelativeLayout
        android:id="@+id/primaryContentCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/item_train_default_view"
            style="@style/line"
            android:layout_height="2dp"
            android:background="#00000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_train_default_view"
            android:background="@color/toolbar_bg_color_3">

            <LinearLayout
                android:id="@+id/item_train_default_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_train_default_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="asdasd"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/item_train_default_name_2"
                    android:layout_width="130dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_item_train_2"
                    android:gravity="center_horizontal"
                    android:paddingTop="2dp"
                    android:text="asdasd"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <com.frame.app.view.ColorArcProgressBar
                android:id="@+id/item_train_default_bar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                app:back_width="10dp"
                app:front_width="10dp"
                app:is_need_content="true"
                app:is_need_unit="true"
                app:max_value="100"
                app:total_engle="360" />

            <ImageView
                android:id="@+id/item_train_default_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/item_train_default_bar"
                android:layout_toRightOf="@+id/item_train_default_ll"
                android:scaleType="centerInside" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/secondaryContentFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/red"
            android:textColor="@color/white"
            android:text="删除" />

    </LinearLayout>
    <!--</LinearLayout>-->
</android.support.v4.view.ViewPager><!--</FrameLayout>-->
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    tools:context=".UI.Activity.GamesDetailsActivity">

    <LinearLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/black">

        <RelativeLayout
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="doBack">

            <ImageView
                android:id="@+id/imageView30"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/icon_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView117"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/imageView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:onClick="doFenXing"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/zhuangfa" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView36"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/logo_dengl" />

        <TextView
            android:id="@+id/textView125"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/saishi_address"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="@string/game_address"
            android:textColor="#666666"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView122"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/shaishi_time"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="@string/game_time"
            android:layout_marginTop="5dp"
            android:textColor="#666666"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView118"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView37"
            android:layout_toRightOf="@+id/imageView37"
            android:gravity="center_vertical"
            android:text="@string/game_jieshao"
            android:textColor="#333333"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView119"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout46"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/game_no_jiesao"
            android:textColor="#666666"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/textView129"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignEnd="@+id/relativeLayout50"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/relativeLayout50"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:onClick="doAddress"
            android:text="@string/look_game_address"
            android:textColor="@color/colorOrangeFont"
            android:textSize="15dp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/textView126"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout51"
            android:background="@android:color/white"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView126"
            android:paddingLeft="16dp"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/relativeLayout52"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/imageView91"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/game_money" />

                <TextView
                    android:id="@+id/textView127"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/imageView91"
                    android:layout_toRightOf="@+id/imageView91"
                    android:gravity="center_vertical"
                    android:text="@string/people_xiaofei_1"
                    android:textColor="@android:color/white"
                    android:textSize="18dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView128"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/relativeLayout52"
                android:layout_alignStart="@+id/relativeLayout52"
                android:layout_below="@+id/relativeLayout52"
                android:layout_marginLeft="37dp"
                android:layout_marginStart="37dp"
                android:gravity="center_vertical"
                android:text="@string/people_xiaofei"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

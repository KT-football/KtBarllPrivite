    <RelativeLayout
        android:id="@+id/relativelayout_D"
        style="@style/activity_kt_rl"
        android:layout_toLeftOf="@+id/relativelayout_E">

        <com.kt.ktball.myclass.MyCircleImageView
            android:id="@+id/game_avatar4_imageView"

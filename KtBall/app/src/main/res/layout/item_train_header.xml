<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_item_header"
            android:orientation="horizontal"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/item_train_header_yxl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="已训练"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/item_train_header_yxl_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/item_train_header_yxl"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/item_train_header_yxl"
                    android:layout_toRightOf="@+id/item_train_header_yxl_tv"
                    android:text="分钟"
                    android:textColor="@color/white"
                    android:textSize="8sp" />
            </RelativeLayout>

            <View style="@style/line_v"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/item_train_header_ywc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="已完成"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/item_train_header_ywc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/item_train_header_ywc"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/item_train_header_ywc"
                    android:layout_toRightOf="@+id/item_train_header_ywc_tv"
                    android:text="次"
                    android:textColor="@color/white"
                    android:textSize="8sp" />
            </RelativeLayout>

            <View style="@style/line_v"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/item_train_header_lxxl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="连续训练"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/item_train_header_lxxl_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/item_train_header_lxxl"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/item_train_header_lxxl"
                    android:layout_toRightOf="@+id/item_train_header_lxxl_tv"
                    android:text="天"
                    android:textColor="@color/white"
                    android:textSize="8sp" />
            </RelativeLayout>

        </LinearLayout>

        <com.kt.ktball.myclass.MyCircleImageView
            android:id="@+id/item_train_header_header"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_train_header_mytrain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_bg_color_2"
        android:drawableRight="@drawable/icon_add"
        android:gravity="center"
        android:padding="7dp"
        android:text="我的课程"
        android:textSize="17sp"
        android:textColor="@color/white" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#f4f5f6"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout6"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/black">

        <ImageView
            android:id="@+id/imageView45"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:onClick="doBack"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="如何参加KT足球比赛"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/layout_footballrecommend_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="        请在入口处找到赛场按钮，选择赛场进行报名，报名成功即可前往赛场进行比赛，参赛时您需要展示您的会员卡，查看我的二维码，每场比赛需要扣除一定的KT币。" />

        <TextView
            android:id="@+id/layout_footballrecommend_erweima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看我的二维码"
            android:textColor="@color/setting_text_bt_color"
            android:layout_below="@+id/layout_footballrecommend_tv"/>

        <TextView
            android:id="@+id/layout_footballrecommend_ktbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/setting_text_bt_color"
            android:layout_below="@+id/layout_footballrecommend_tv"
            android:layout_toRightOf="@+id/layout_footballrecommend_erweima"
            android:text="什么是KT币"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".UI.Activity.PasswordResetActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="16dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout8">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageView20"
            android:src="@drawable/retu"
            android:onClick="doFinsh"
            android:layout_marginBottom="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码重置"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:id="@+id/textView29"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView47"
        android:src="@drawable/ktlogo"
        android:layout_below="@+id/relativeLayout8"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_below="@+id/imageView47"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_text"
            android:layout_marginBottom="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout23">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imageView40"
                android:layout_marginLeft="8dp"
                android:src="@drawable/phone"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:inputType="phone"
                android:ems="10"
                android:paddingLeft="4dp"
                android:background="@drawable/no_border"
                android:hint="请输入手机号"
                android:id="@+id/editText3"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/imageView40"
                android:layout_toEndOf="@+id/imageView40" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_text"
            android:layout_marginBottom="12dp"
            android:layout_below="@+id/relativeLayout23"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout24">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imageView41"
                android:src="@drawable/code"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="获取验证码"
                android:textColor="@android:color/black"
                android:id="@+id/button2"
                android:onClick="doGetCode"
                android:layout_marginRight="8dp"
                android:background="@color/colorOrangeFont"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:inputType="phone"
                android:ems="10"
                android:paddingLeft="8dp"
                android:background="@drawable/no_border"
                android:id="@+id/editText5"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/imageView41"
                android:layout_toEndOf="@+id/imageView41" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_text"
            android:layout_marginBottom="12dp"
            android:layout_below="@+id/relativeLayout24"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout25">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imageView44"
                android:src="@drawable/password"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/no_border"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="输入5-12位密码"
                android:paddingLeft="8dp"
                android:id="@+id/editText6"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/imageView44"
                android:layout_toEndOf="@+id/imageView44" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_text"
            android:layout_marginBottom="12dp"
            android:layout_below="@+id/relativeLayout25"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout26">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imageView46"
                android:src="@drawable/password"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="再次确认密码"
                android:paddingLeft="8dp"
                android:background="@drawable/no_border"
                android:id="@+id/editText7"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/imageView46"
                android:layout_toEndOf="@+id/imageView46" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="确 认"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:gravity="center"
            android:onClick="doResetPassword"
            android:background="@drawable/login_buttom"
            android:id="@+id/textView51"
            android:layout_below="@+id/relativeLayout26"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>
